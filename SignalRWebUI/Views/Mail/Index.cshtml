@using SignalRWebUI.Dtos.MailDtos
@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Mail Gönderme Sayfası</div>
		</div>
		<div class="card-body">
			<div class="form-group">
				<form method="post">

					<input type="email" class="form-control input-pill" asp-for="ReceiverMail" placeholder="Alıcı Mail Adresi" />
					<br />
					<input type="text" class="form-control input-pill" asp-for="Subject" placeholder="Konu" />
					<br />
					<textarea placeholder="Mesajınızı Yazınız" class="form-control input-pill" rows="5" asp-for="Body"></textarea>
					<br />
				

					<div class="card-action">
						<button type="submit" class="btn btn-success">Gönder</button>
						<a href="/AdminBooking/BookingList" class="btn btn-danger">Vazgeç</a>
					</div>
				</form>

			</div>
		</div>
	</div>
</div>

