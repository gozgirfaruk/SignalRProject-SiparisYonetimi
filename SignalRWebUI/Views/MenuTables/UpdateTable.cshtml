@model UpdateTableDto
@{
    ViewData["Title"] = "UpdateTable";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Masa  Güncelleme Sayfası</div>
		</div>
		<div class="card-body">
			<div class="form-group">
				<form method="post">
					<input type="hidden" asp-for="MenuTableID" />
					<label>Masa Adı</label>
					<input type="text" class="form-control input-pill" asp-for="Name">
					<br />
				
					<div class="card-action">
						<button type="submit" class="btn btn-success">Güncelle</button>
						<a href="/MenuTables/Index" class="btn btn-danger">Vazgeç</a>
					</div>
				</form>

			</div>
		</div>
	</div>
</div>

