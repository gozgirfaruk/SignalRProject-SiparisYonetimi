@using SignalR.DtoLayer.BookingDtos
@model CreateBookingsDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

@await Html.PartialAsync("/Views/UILayoutPartial/_NavbarPartial.cshtml")

<html>
<body class="sub_page">

  <section class="book_section layout_padding">
    <div class="container">
      <div class="heading_container">
        <h2>
          Rezervasyon Oluştur
        </h2>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form_container">
            <form method="post">
              <div>
                <input type="text" class="form-control" placeholder="Adınız" asp-for="Name" required />
              </div>
              <div>
                <input type="text" class="form-control" placeholder="Telefon" asp-for="Phone" required />
              </div>
              <div>
                <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Mail" required />
              </div>
              <div>
                <select class="form-control nice-select wide" asp-for="PersonCount">
                  <option value="" disabled selected>
                   Kişi Sayısı
                  </option>
                  <option value="2">
                    2
                  </option>
                  <option value="3">
                    3
                  </option>
                  <option value="4">
                    4
                  </option>
                  <option value="5">
                    5
                  </option>
                </select>
              </div>
              <div>
                <input type="date" class="form-control" asp-for="Date">
              </div>
              <div class="btn_box">
                <button>
                  Rezerv Et
                </button>
              </div>
            </form>
          </div>
        </div>
        <div class="col-md-6">
          <div class="map_container ">
            <div id="googleMap"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
</html>